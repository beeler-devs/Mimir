# Claude AI API Key (required for chat)
CLAUDE_API_KEY=your_claude_api_key_here

# Chat model (default: claude-sonnet-4-5)
CHAT_MODEL=claude-sonnet-4-5

# ============================================================================
# VOICE ASSISTANT CONFIGURATION
# ============================================================================

# Deepgram API Key for Speech-to-Text (required for voice assistant)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI API Key for Text-to-Speech (optional - either OpenAI or ElevenLabs required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Key for Text-to-Speech (optional - either OpenAI or ElevenLabs required)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Voice Assistant Feature Flag (default: true)
# Set to "false" to disable voice assistant entirely
VOICE_ASSISTANT_ENABLED=true

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port (default: 8001)
PORT=8001

# ============================================================================
# SUPABASE CONFIGURATION (optional, for future features)
# ============================================================================

# Supabase URL
SUPABASE_URL=your_supabase_url_here

# Supabase Anon Key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
